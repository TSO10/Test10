@inherits UmbracoTemplatePage
@{
	Layout = null;
}
<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>@CurrentPage.Name - uWaterCooler</title>
		<meta name="description" content="">
		<meta name="author" content="">
		
		<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		
		<!-- Le styles -->
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/style.css" rel="stylesheet">
		<link href="/css/bootstrap-responsive.min.css" rel="stylesheet">
		<link href="/scripts/tokeninput/token-input.css" rel="stylesheet">
		<link href="/scripts/tokeninput/token-input-facebook.css" rel="stylesheet">
		
		@RenderSection("Head", false)
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span><span class="icon-bar"></span>
							<span class="icon-bar"></span>
					</a>
					<a class="brand" href="/">uWatercooler</a>
									
					<div class="nav-collapse">
						
						<nav id="top-nav">
							<ul class="nav">
								<nav id= "top-nav">
								<ul class ="nav">
									@{var home = CurrentPage.AncestorOrSelf(1);}
									@foreach (var page in home.Children.Where ("Visible"))
									{
										<li>
											<a href="@page.Url">@page.Name </a>
											</li>
									}

							</ul>
						</nav>
									
					</div>
												
					<!--/.nav-collapse -->
					<ul class="nav pull-right">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Guest<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<!-- If logged on -->
								<li><a href="/logout"><i class="icon-off"></i>Log Out</a></li>
								<!-- else -->
								<li><a href="/login"><i class="icon-lock"></i>Log In</a></li>
								<li><a href="/register"><i class="icon-pencil"></i>Register</a></li>  
							</ul>
						</li>
						<li>
							<form class="navbar-form pull-left" action="/search">
								<input type="text" name="q" class="search-query span2" placeholder="Search">
							</form>
						</li>
					</ul>
				</div>
			</div>
		</div>

									
		<div id="notifications" class="container">
			<div class="row"></div>
		</div>

		<div class="container">
			<div class="row">
				<!-- Main Column -->
				@RenderBody()  
			</div>
		</div>
																										
		<!-- JavaScript -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script src="/scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
		<script src="/scripts/jquery.tmpl.min.js" type="text/javascript"></script>
		<script src="/scripts/bootstrap.min.js" type="text/javascript"></script>
		<!-- SignalR related scripts -->
		<script src="/scripts/jquery.signalR-1.0.0-rc2.min.js" type="text/javascript"></script>
		<script src="/signalr/hubs" type="text/javascript"></script>
		<!-- Facebook autosuggest JS -->
		<script src="/scripts/tokeninput/jquery.tokeninput.js" type="text/javascript"></script>
		<!-- Our custom javascript -->
		<script src="/scripts/scripts.js" type="text/javascript"></script>
	</body>
</html>